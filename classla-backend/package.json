{
  "name": "classla-backend",
  "version": "1.0.0",
  "description": "Backend API for Classla",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "dev:redis": "docker compose -f docker-compose.local.yml up -d redis && tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "jest",
    "redis": "docker compose -f docker-compose.local.yml up -d redis",
    "redis:up": "docker compose -f docker-compose.local.yml up -d redis",
    "redis:down": "docker compose -f docker-compose.local.yml down",
    "redis:logs": "docker compose -f docker-compose.local.yml logs -f redis",
    "test:watch": "jest --watch"
  },
  "keywords": [
    "lms",
    "education",
    "api"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@ai-sdk/amazon-bedrock": "^4.0.68",
    "@ai-sdk/google": "^3.0.33",
    "@ai-sdk/openai": "^3.0.36",
    "@aws-sdk/client-s3": "^3.913.0",
    "@aws-sdk/s3-request-presigner": "^3.913.0",
    "@supabase/supabase-js": "^2.38.0",
    "@workos-inc/node": "^7.70.0",
    "ai": "^6.0.104",
    "archiver": "^7.0.1",
    "bcrypt": "^6.0.0",
    "connect-redis": "^9.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "diff-match-patch": "^1.0.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-session": "^1.18.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "redis": "^5.8.2",
    "socket.io": "^4.8.1",
    "uuid": "^9.0.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/archiver": "^7.0.0",
    "@types/bcrypt": "^6.0.0",
    "@types/connect-redis": "^0.0.23",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.18.2",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.10.0",
    "@types/redis": "^4.0.10",
    "@types/socket.io": "^3.0.2",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^9.0.7",
    "jest": "^29.7.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.1.1",
    "tsx": "^4.6.0",
    "typescript": "^5.3.2"
  }
}
