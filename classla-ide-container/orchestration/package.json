{
  "name": "ide-orchestration-api",
  "version": "1.0.0",
  "description": "Management API for orchestrating IDE containers with Docker Swarm",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "build:dashboard": "cd dashboard && npm run build",
    "build:all": "npm run build && npm run build:dashboard",
    "start": "node dist/server.js",
    "dev": "ts-node src/server.ts",
    "test": "jest --testPathIgnorePatterns=inactivity.test.ts",
    "test:all": "jest",
    "test:integration": "jest integration.test.ts",
    "test:multinode": "jest multinode.test.ts",
    "test:dashboard": "jest dashboard.test.ts",
    "test:inactivity": "jest inactivity.test.ts --testTimeout=900000",
    "test:watch": "jest --watch",
    "serve:test": "node serve-test.js",
    "lint": "eslint src --ext .ts",
    "docker:build": "docker build -t ide-orchestration-api:latest .",
    "docker:build:tag": "docker build -t ide-orchestration-api:latest -t ide-orchestration-api:$(node -p \"require('./package.json').version\") .",
    "docker:run": "docker run -p 3001:3001 --env-file .env -v /var/run/docker.sock:/var/run/docker.sock -v $(pwd)/data:/app/data ide-orchestration-api:latest"
  },
  "keywords": [
    "docker",
    "swarm",
    "orchestration",
    "ide",
    "containers"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.908.0",
    "@supabase/supabase-js": "^2.87.0",
    "@types/dockerode": "^3.3.44",
    "axios": "^1.12.2",
    "better-sqlite3": "^11.7.0",
    "cors": "^2.8.5",
    "dockerode": "^4.0.9",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "systeminformation": "^5.21.20"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.6",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
